<div class="container">
  <h1>Cart</h1>
  <% if @cart && @cart.cart_items.any? %>
    <ul class="list-group">
      <% @cart.cart_items.each do |cart_item| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= cart_item.product.name %>
          <span class="badge bg-primary rounded-pill">Quantity: <%= cart_item.quantity %></span>
          <span class="badge bg-success rounded-pill">Price: <%= number_to_currency(cart_item.product.price) %></span>
        </li>
      <% end %>
    </ul>
    <div class="mt-3">
      <%= link_to "Purchase", empty_cart_cart_path, method: :delete, data: { turbo_method: :delete, confirm: "Are you sure you want to empty your cart?" }, class: "btn btn-primary" %>
    </div>
  <% else %>
    <p>Your cart is empty.</p>
  <% end %>
</div>
