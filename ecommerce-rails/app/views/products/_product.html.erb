<div class="card">
    <%= image_tag product.images.first, class: "card-img-top", style: "height: 250px; object-fit: cover; hover" %>
  <div class="card-body">
    <h5 class="card-title"><%= product.name %></h5>
    <p class="card-text"><%= product.description %></p>
    <p class="card-text"><strong>Price:</strong> <%= number_to_currency(product.price) %></p>
    <% unless params[:action] == 'show' %>
      <%= link_to "View Details", product_path(product), class: "btn btn-primary me-2" %>
      <% if user_signed_in? %>
        <%= link_to add_product_cart_path(product_id: product.id), method: :post,data: { turbo_method: "post" }, class: "btn btn-outline-success", title: "Add to Cart" do %>
          <i class="bi bi-cart-plus"></i> Add to Cart
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
<style>
  .card:hover {
    filter: brightness(75%);
  }
</style>