<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8">
      <%= render @product %>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-8 text-center">
      <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-primary mr-2" %>
      <%= link_to "Back to products", products_path, class: "btn btn-secondary mr-2" %>
      <%= link_to "Destroy", product_path(@product), method: :delete, data: {turbo_method: :delete,  turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
