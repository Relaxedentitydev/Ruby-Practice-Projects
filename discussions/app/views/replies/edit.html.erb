<div class="container pt-5">
  <div class="row">
    <div class="col-md-8">
      <h1 class="title is-2 has-text-grey">Editing Reply</h1>
      <%= simple_form_for([@discussion, @reply], html: { class: "mt-4" }) do |f| %>
        <div class="field">
          <div class="control">
            <%= f.input :reply, input_html: { class: 'textarea form-control', rows: 5 }, wrapper: false, label_html: { class: 'label' } %>
          </div>
        </div>

        <%= f.button :submit, 'Update Reply', class: 'btn btn-primary mt-3' %>
      <% end %>
      <br>
    </div>
  </div>
</div>

