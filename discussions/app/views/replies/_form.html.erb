<%= simple_form_for([@discussion, @discussion.replies.build], remote: true, html: { class: 'form-bootstrap' }) do |f| %>

<div class="field">
  <%= f.input :reply, input_html: { class: 'form-control textarea', rows: 3 }, wrapper: false, label_html: { class: 'form-label' } %>
<br>
</div>

<%= f.button :submit, 'Leave a reply', class: 'btn btn-primary' %>

<% end %>
<br>